{
	"name": "kyanite-editor",
	"displayName": "Kyanite Editor",
	"description": "Editor for the Kyanite Game Engine",
	"version": "0.0.1",
	"publisher": "broken-bytes",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/broken-bytes/Kyanite"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:swift",
		"onFileSystem:kblueprint",
		"onFileSystem:kmeta",
		"workspaceContains:**/.kproj"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "kyanite-editor",
					"title": "Kyanite",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"kyanite-editor": [
				{
					"id": "entity-hierarchy",
					"name": "Entity Hierarchy",
					"icon": "media/dep.svg",
					"contextualTitle": "Entity Hierarchy"
				},
				{
					"id": "component-outliner",
					"name": "Component Outliner",
					"icon": "media/dep.svg",
					"contextualTitle": "Component Outliner"
				},
				{
					"id": "bindings",
					"name": "Script Bindings",
					"icon": "media/dep.svg",
					"contextualTitle": "Script Bindings"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint \"src/**/*.ts\""
	},
	"devDependencies": {
		"@types/ftp": "^0.3.33",
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^16.11.7",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"eslint": "^8.26.0",
		"typescript": "^4.8.4"
	},
	"dependencies": {
		"ftp": "^0.3.10",
		"jsonc-parser": "^0.4.2",
		"minimist": "^1.2.6",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	}
}
